.container {
  padding: 20px;
}

button {
  background-color: #ff0000; /* 自定义搜索按钮的颜色 */
  color: #ffffff;            /* 按钮文字颜色 */
  padding: 10px;
  border: none;
  border-radius: 5px;
  width: 100%;
  text-align: center;
  margin-bottom: 20px;      /* 按钮和推荐列表之间的间距 */
}

/* 返回按钮样式 */
.back-button {
  position: absolute;
  top: 20px;  /* 设置距离页面顶部的距离 */
  left: 20px; /* 设置距离页面左边的距离 */
  background-color: transparent;
  color: #ffffff;
  border: none;
  font-size: 16px;
  padding: 10px;
  z-index: 10; /* 确保返回按钮在页面元素上方 */
}

.recommended-recipe {
  margin-top: 20px;         /* 按钮与文字之间的间距 */
}

.recommendation-text {
  font-size: 18px;          /* 字体大小 */
  color: #333333;           /* 字体颜色 */
  text-align: left;         /* 左对齐 */
}

.image-swiper {
  width: 70%;  /* 使swiper宽度填满 */
  height: 200px; /* 设置合适的高度 */
}

.slide-image {
  width: 100%;  /* 使图片宽度100%填满swiper */
  height: 100%; /* 使图片高度100%填满swiper */
}

/* 图标模块样式 */
.category-icons {
  display: flex;
  flex-direction: column;
  margin-top: 20px;         /* 与上方内容的间距 */
}

.category-row {
  display: flex;
  justify-content: space-between; /* 让图标均匀分布 */
  margin-bottom: 10px;
}

.category-item {
  flex: 1;                   /* 平均分配每个图标的空间 */
  text-align: center;        /* 图标居中 */
}

.category-icon {
  width: 70px;               /* 图标宽度 */
  height: 70px;              /* 图标高度 */
}