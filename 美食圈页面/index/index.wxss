.container {
  padding: 20px;
}

.post {
  margin-bottom: 20px;
  background-color: #fff;
  padding: 10px;
  border-radius: 5px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.post-image {
  width: 100%;
  height: 200px;
  border-radius: 5px;
}

.post-title {
  font-size: 20px;
  font-weight: bold;
  margin-top: 10px;
}

.post-description {
  color: #666;
  margin-top: 5px;
}
